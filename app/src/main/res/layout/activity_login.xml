<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FFFF0"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_circle_24"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="-15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_circle_24"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="-60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:id="@+id/coverheader1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mentor"
            android:fontFamily="@font/poppinsbold"
            android:textSize="50sp"
            android:textColor="#2DA2B9"
            android:id="@+id/headertext1"
            />

        <TextView
            android:id="@+id/headertext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text=" me"
            android:textColor="#E6D915"
            android:textSize="50sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:background="#51CDD0"
            android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000000"
            android:fontFamily="@font/poppinsmedium" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Enter Email"
            android:textColorHint="#888888"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginBottom="25dp"
            android:background="#FFFFFF"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#000000"
            android:fontFamily="@font/poppinsmedium"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Enter Password"
            android:textColorHint="#888888"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginBottom="25dp"
            android:background="#FFFFFF"
            android:padding="5dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Forgot Password?"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login"
            android:backgroundTint="#9FFFF0"
            android:textColor="#51CDD0"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="40dp"
            android:id="@+id/loginbtn"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-200dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign Up"
                android:fontFamily="@font/poppinsbold"
                android:clickable="true"
                android:textColor="@color/black"
                android:id="@+id/registertext"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>