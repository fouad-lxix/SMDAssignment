<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FFFF0"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_circle_24"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="-15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_circle_24"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="-60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/coverheader1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mentor"
        android:fontFamily="@font/poppinsbold"
        android:textSize="50sp"
        android:textColor="#2DA2B9"
        android:id="@+id/headertext1"
        />

        <TextView
            android:id="@+id/headertext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text=" me"
            android:textColor="#E6D915"
            android:textSize="50sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="connect . ask . learn"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/coverheader1"
        android:id="@+id/headertext3"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/headerbtn"
        android:text="Get Started"
        android:textSize="20sp"
        android:fontFamily="@font/poppinsregular"
        android:layout_below="@id/headertext3"
        android:layout_marginTop="60dp"
        android:backgroundTint="#2DA2B9"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>